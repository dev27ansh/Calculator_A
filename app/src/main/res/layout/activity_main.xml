<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#454C53">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/buttonlayout"
        android:layout_marginBottom="70dp">

        <EditText
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="" android:textColor="@color/white"
            android:clickable="false" android:focusable="true"
            android:scrollHorizontally="true"
            android:singleLine="true" android:cursorVisible="true"
            android:verticalScrollbarPosition="right"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:textAlignment="viewEnd"
            android:textSize="50sp"
            android:id="@+id/inputnumber">

        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#D1CECE"
            android:clickable="false"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:textSize="25sp"
            android:id="@+id/result"
            android:textAlignment="viewEnd"
            android:padding="10dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/buttonlayout">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:id="@+id/clear">
        </android.widget.Button>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/button7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/ripple"
            android:gravity="center">
        </android.widget.Button>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/button4"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/ripple"
            android:gravity="center">
        </android.widget.Button>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:id="@+id/button1"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </android.widget.Button>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="00"
            android:id="@+id/button00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/ripple"
            android:gravity="center">
        </android.widget.Button>




    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:id="@+id/buttonpercent">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="8"
                android:id="@+id/button8"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="5"
                android:id="@+id/button5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:id="@+id/button2"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="0"
                android:id="@+id/button0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>




        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableTint="@color/white"
                android:paddingBottom="25dp"
                android:drawableBottom="@drawable/baseline_backspace_24"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:id="@+id/buttonbackspace">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/button9"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="6"
                android:id="@+id/button6"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:id="@+id/button3"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="."
                android:id="@+id/buttondot"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>




        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="÷"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:id="@+id/buttondivide">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="*"
                android:id="@+id/buttonmultiply"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="-"
                android:id="@+id/buttonsubtract"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple"
                android:gravity="center"
                android:id="@+id/buttonadd"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>
            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="="
                android:id="@+id/buttonequal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:gravity="center">
            </android.widget.Button>




        </LinearLayout>


    </LinearLayout>


</RelativeLayout>